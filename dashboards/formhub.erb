<script type='text/javascript'>
$(function() {
  // These settings override the defaults set in application.coffee. You can do this on a per dashboard basis.
  Dashing.gridsterLayout('[{"col":1,"row":1},{"col":1,"row":2},\
      {"col":2,"row":1},{"col":2,"row":2},{"col":4,"row":1},\
      {"col":4,"row":2},{"col":5,"row":1},{"col":5,"row":2}]');
  Dashing.widget_base_dimensions = [370, 340];
  Dashing.numColumns = 5;
});
</script>
<% content_for(:title) { "Formhub dashboard" } %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="cpu_proc_list" data-view="List" data-title="CPU (%) By Process" style="background-color:#dc5945"></div>
    </li>
    <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="mem_proc_list" data-view="List" data-title="Memory (MB) By Process" style="background-color:#12b0c5"></div>
    </li>
    <li data-row="2" data-col="2" data-sizex="2" data-sizey="1">
      <div data-id="submissions_per_hour" data-view="Graph" data-title="Submissions By Hour" style="background-color:#ec663c"></div>
    </li>
    <li data-row="1" data-col="2" data-sizex="2" data-sizey="1">
      <div data-id="submissions_per_day" data-view="Graph" data-title="Submissions By Day" style="background-color:#ff9618"></div>
    </li>
    <li data-row="1" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="cpu" data-view="Number" data-title="CPU(%)" style="background-color:#96bf48;"></div>
    </li>
    <li data-row="1" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="diskspace" data-view="Meter" data-title="Available Disk Space" data-min="0" data-max="40960"></div>
    </li>
    <li data-row="1" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="mem_free" data-view="Number" data-title="Free Mem(MB)"></div>
    </li>
    <li data-row="5" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="load_avg" data-view="Meter" data-title="Load Avg." data-min="0" data-max="100"></div>
    </li>
  </ul>
</div>
